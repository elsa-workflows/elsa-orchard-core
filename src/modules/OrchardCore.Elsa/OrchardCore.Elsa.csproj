<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
        <IsPackable>true</IsPackable>
        <PackageId>Elsa.OrchardCore.Module</PackageId>
        <PackageTags>Elsa;Workflows;OrchardCore;Module</PackageTags>
        <Description>Core Elsa Workflows integration for Orchard Core CMS. Provides foundational workflow services, HTTP activities, workflow management UI, and integration with Orchard Core's authentication and security features.</Description>
    </PropertyGroup>

    <ItemGroup>
        <FrameworkReference Include="Microsoft.AspNetCore.App"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="JetBrains.Annotations"/>
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.Server"/>
        <PackageReference Include="OrchardCore.Admin.Abstractions"/>
