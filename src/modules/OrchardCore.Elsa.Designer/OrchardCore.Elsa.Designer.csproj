<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <StaticWebAssetBasePath>OrchardCore.Elsa</StaticWebAssetBasePath>
        <IsPackable>true</IsPackable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" />
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" PrivateAssets="all" />
        <PackageReference Include="Elsa.Studio.Core.BlazorWasm" />
        <PackageReference Include="Elsa.Studio.Login.BlazorWasm" />
        <PackageReference Include="Elsa.Studio.Workflows.Core" />
        <PackageReference Include="Elsa.Studio.Workflows" />
        <PackageReference Include="Elsa.Studio.Shell" />
    </ItemGroup>

    <Target Name="PublishBeforePack" BeforeTargets="GenerateNuspec">
        <!-- Ensure the project is published before packing -->
        <MSBuild Projects="$(MSBuildProjectFullPath)"
                 Targets="Publish"
                 Properties="Configuration=$(Configuration);PublishDir=$(IntermediateOutputPath)publish/;SelfContained=false" />

        <!-- Include all published _framework files as content in the package -->
        <ItemGroup>
            <Content Include="$(IntermediateOutputPath)publish\wwwroot\_framework\**\*" Condition="Exists('$(IntermediateOutputPath)publish\wwwroot\_framework')">
                <Pack>true</Pack>
                <PackagePath>staticwebassets/_framework/%(RecursiveDir)%(Filename)%(Extension)</PackagePath>
                <CopyToOutputDirectory>Never</CopyToOutputDirectory>
            </Content>
        </ItemGroup>
    </Target>
    
</Project>
