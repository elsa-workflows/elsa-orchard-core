<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <StaticWebAssetBasePath>OrchardCore.Elsa</StaticWebAssetBasePath>
        <IsPackable>true</IsPackable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" />
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" PrivateAssets="all" />
        <PackageReference Include="Elsa.Studio.Core.BlazorWasm" />
        <PackageReference Include="Elsa.Studio.Login.BlazorWasm" />
        <PackageReference Include="Elsa.Studio.Workflows.Core" />
        <PackageReference Include="Elsa.Studio.Workflows" />
        <PackageReference Include="Elsa.Studio.Shell" />
    </ItemGroup>

    <Target Name="PublishBeforePack" BeforeTargets="GenerateNuspec" DependsOnTargets="ComputeFilesToPublish">
        <!-- Include all published _framework files as content in the package -->
        <ItemGroup>
            <_FrameworkFiles Include="@(ResolvedFileToPublish)" Condition="$([System.String]::Copy('%(ResolvedFileToPublish.RelativePath)').StartsWith('wwwroot/_framework/'))" />
            <Content Include="@(_FrameworkFiles)">
                <Pack>true</Pack>
                <PackagePath>staticwebassets/_framework/%(ResolvedFileToPublish.RecursiveDir)%(ResolvedFileToPublish.Filename)%(ResolvedFileToPublish.Extension)</PackagePath>
                <CopyToOutputDirectory>Never</CopyToOutputDirectory>
            </Content>
        </ItemGroup>
    </Target>
    
</Project>
