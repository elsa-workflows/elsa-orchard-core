<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <StaticWebAssetBasePath>OrchardCore.Elsa</StaticWebAssetBasePath>
        <IsPackable>true</IsPackable>
    </PropertyGroup>

    <PropertyGroup>
        <WasmEnableWebServer>true</WasmEnableWebServer>
        <WasmDeploymentLayout>Bundle</WasmDeploymentLayout>
    </PropertyGroup>

    <!-- pack the AppBundle into the NuGet -->
    <ItemGroup>
        <Content Include="bin\$(Configuration)\net9.0\browser-wasm\AppBundle\**\*"
                 Pack="true"
                 PackagePath="contentFiles\any\any\OrchardCore.Elsa\AppBundle\"
                 CopyToOutput="true" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" />
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" PrivateAssets="all" />
        <PackageReference Include="Elsa.Studio.Core.BlazorWasm" />
        <PackageReference Include="Elsa.Studio.Login.BlazorWasm" />
        <PackageReference Include="Elsa.Studio.Workflows.Core" />
        <PackageReference Include="Elsa.Studio.Workflows" />
        <PackageReference Include="Elsa.Studio.Shell" />
    </ItemGroup>

</Project>
